//- variable
- var keywords = ''
- var description = ''

- var menu = [{'title':'home','link':'#title'},{'title':'about us','link':'#aboutus'},{'title':'work','link':'#work'},{'title':'blog','link':'#blog'},{'title':'contact','link':'#contact'}]


//- mixin

mixin menu(itemMenu)
	.nav-bar
		.blur
		ul
			each item in itemMenu
				li.goto
					- var href = {'href':item.link}
					a()&attributes(href)= item.title

mixin tagTitle(textTitle,color)
	.tagTitle(class=color)
		h2 #{textTitle}

	
